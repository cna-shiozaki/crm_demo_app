{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "src/js",
    "src/angular-app"
  ]
}