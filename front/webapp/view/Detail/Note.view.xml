<mvc:View
	controllerName="cna.pater.controller.Detail.Note"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" >
	
	<Title level="H4" titleStyle="H4" text="Commentaire" />
	
	<l:VerticalLayout 
		id="displayContainer" 
		width="100%" 
		class="sapUiMediumMargin" >


		<TextArea 
			id="displayNoteText"
			editable="false"
			value="{Note}"
			width="100%"
			rows="4"/>
	
	</l:VerticalLayout>
</mvc:View>