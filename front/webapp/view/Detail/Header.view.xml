<mvc:View
	controllerName="cna.pater.controller.Detail.Header"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" >
	
	<Title level="H4" titleStyle="H4" text="Données d'entête" />
	
	<l:VerticalLayout 
		id="displayContainer" 
		width="100%" 
		class="sapUiMediumMargin" >
		
		<f:Form 
			id="headerFormDisplay" 
			editable="false"> 
			<f:layout> 
				<f:ResponsiveGridLayout 
					labelSpanXL="3" 
					labelSpanL="3" 
					labelSpanM="3" 
					labelSpanS="12" 
					adjustLabelSpan="false" 
					emptySpanXL="4" 
					emptySpanL="4" 
					emptySpanM="4" 
					emptySpanS="0" 
					columnsXL="1" 
					columnsL="1" 
					columnsM="1" 
					singleContainerFullSize="false" /> 
			</f:layout> 
						
			<f:formContainers> 
				<f:FormContainer id="formContainer1"> 
					<f:formElements> 
					<f:FormElement label="Désignation"> 
							<f:fields> 
								<Text text="{Description}" /> 
							</f:fields> 
						</f:FormElement> 						
						<f:FormElement label="Motif"> 
							<f:fields> 
								<Text text="{Motif}" /> 
							</f:fields> 
						</f:FormElement> 
						<f:FormElement label="Crée Par"> 
							<f:fields> 
								<Text text="cnaciri" /> 
							</f:fields> 
						</f:FormElement> 							
					</f:formElements> 
				</f:FormContainer> 
			</f:formContainers> 
		</f:Form> 	
	</l:VerticalLayout>
</mvc:View>